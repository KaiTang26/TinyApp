<!-- uses to save the url  -->
<!-- views/urls_index.ejs -->

<!DOCTYPE html>
<html>
<head>
  <% include ./partials/_head %>
</head>
<body>

  <header>
      <% include ./partials/_header %>
  </header>

  <h1>My Account</h1>

    <% for(let i in urls[ID]){%>
    <form action="/urls/<%= i%>/delete" method="POST" style="margin:10px;">
      <label><%= i %>-></label>
      <label><a href="<%= urls[i]%>"><%= urls[ID][i] %></a></label>
      <label><a href="http://localhost:<%=PORT %>/urls/<%=i%>">Edit</a></label>
      <button type="delete">Delete</button>
    </form>
    <%}%>

    <a href="http://localhost:<%=PORT %>/urls/new">Add new short URLs</a>

</body>
</html>